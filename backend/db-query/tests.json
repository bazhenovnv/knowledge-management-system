{
  "tests": [
    {
      "name": "Execute SELECT query",
      "method": "POST",
      "path": "/",
      "body": {
        "query": "SELECT 1 as test_column",
        "max_rows": 10
      },
      "expectedStatus": 200,
      "expectedBody": {
        "rows": "array",
        "columns": "array",
        "row_count": "number"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject non-SELECT query", 
      "method": "POST",
      "path": "/",
      "body": {
        "query": "DELETE FROM test"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Handle CORS preflight",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": "",
      "bodyMatcher": "exact"
    }
  ]
}