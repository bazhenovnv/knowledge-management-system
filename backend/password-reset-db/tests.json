{
  "tests": [
    {
      "name": "Send reset code for existing user",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "send_code",
        "email": "manager@company.com"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "message": "string",
        "email": "manager@company.com"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Send reset code for non-existing user",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "send_code",
        "email": "nonexistent@example.com"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Пользователь с таким email не найден"
      },
      "bodyMatcher": "exact"
    },
    {
      "name": "Verify invalid code",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "verify_code",
        "email": "manager@company.com",
        "code": "000000"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reset password with invalid token",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "reset_password",
        "email": "manager@company.com",
        "reset_token": "invalid_token",
        "new_password": "newpass123"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Неверный токен сброса или токен истек"
      },
      "bodyMatcher": "exact"
    },
    {
      "name": "Invalid email format",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "send_code",
        "email": "invalid-email"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Неверный формат email"
      },
      "bodyMatcher": "exact"
    }
  ]
}