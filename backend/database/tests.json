{
  "tests": [
    {
      "name": "CORS preflight OPTIONS request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Получить список сотрудников", 
      "method": "GET",
      "path": "/?action=list&table=employees",
      "expectedStatus": 200,
      "bodyMatcher": "partial"
    },
    {
      "name": "Создать нового сотрудника",
      "method": "POST",
      "path": "/?action=create&table=employees",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "email": "testuser2025@company.com",
        "full_name": "Test User",
        "phone": "+1234567890",
        "department": "IT",
        "position": "Developer",
        "role": "employee",
        "password": "testpass123"
      },
      "expectedStatus": 200,
      "bodyMatcher": "partial"
    },
    {
      "name": "Обновить данные сотрудника",
      "method": "PUT",
      "path": "/?action=update&table=employees&id=1",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "full_name": "Баженов Николай Владимирович",
        "email": "admin@company.com",
        "phone": "+7 (938) 523-17-81",
        "department": "IT",
        "position": "Главный администратор",
        "role": "admin",
        "hire_date": "2023-01-01"
      },
      "expectedStatus": 200,
      "bodyMatcher": "partial"
    },
    {
      "name": "Деактивировать сотрудника (soft delete)",
      "method": "POST",
      "path": "/",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "action": "delete",
        "table": "employees",
        "id": 999,
        "permanent": false
      },
      "expectedStatus": 200,
      "bodyMatcher": "partial"
    }
  ]
}