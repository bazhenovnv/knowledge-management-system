{
  "tests": [
    {
      "name": "Send reset code - success",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "send_code",
        "email": "test@example.com"
      },
      "expectedStatus": 200
    },
    {
      "name": "Invalid email format",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "send_code",
        "email": "invalid-email"
      },
      "expectedStatus": 400
    },
    {
      "name": "Verify code endpoint",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "verify_code",
        "email": "test@example.com",
        "code": "000000"
      },
      "expectedStatus": 400
    }
  ]
}